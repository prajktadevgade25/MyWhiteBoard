<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shapePropertyBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/shape_prop_bg"
    android:orientation="horizontal"
    android:padding="8dp"
    android:visibility="gone">

    <!-- Fill toggle + swatch -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnFillColor"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="Fill color"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fill"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Border swatch -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnBorderColor"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="Border color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Border"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Stroke width -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWidthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Width" />

        <SeekBar
            android:id="@+id/seekWidth"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:max="60" />
    </LinearLayout>
</LinearLayout>
